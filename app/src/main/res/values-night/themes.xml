<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JobFinderMobileApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryVariant">@color/darkGreen</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dodgerBlue</item>
        <item name="colorSecondaryVariant">@color/dodgerBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">?colorPrimaryVariant</item>

        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>

        <item name="windowSplashScreenAnimationDuration">200</item>

        <item name="postSplashScreenTheme">@style/Theme.JobFinderMobileApp</item>

    </style>
</resources>